var g_sourceLines = [
'//',
'//',
'//',
'module decoder(',
'	start_addr_i,',
'	size_of_transfer_i,',
'	used_burst_i,',
'	//',
'	invalid_psel_i,',
'	psel,',
'	pready,',
'	pslverr,',
'	prdata,',
'	//',
'	preadyX_o,',
'	pslverrX_o,',
'	prdataX_o,',
' 	dec_error_o,',
'	true_psel_o,',
'	false_psel_o	',
'	//',
');',
'//iclude parameter file',
'import parameter_pkg::*; ',
'//PORTS',
'input logic [31:0] start_addr_i;',
'input logic [2:0] size_of_transfer_i;',
'input logic [1:0] used_burst_i;',
'input logic invalid_psel_i;',
'input logic [`SLAVE_CNT-1:0] psel;',
'input logic [`SLAVE_CNT-1:0] pready;',
'input logic [`SLAVE_CNT-1:0] pslverr;',
'input logic [`SLAVE_CNT-1:0][31:0] prdata;',
'//',
'output logic dec_error_o;',
'output logic [`SLAVE_CNT-1:0] preadyX_o;',
'output logic [`SLAVE_CNT-1:0] pslverrX_o;',
'output logic [`SLAVE_CNT-1:0][31:0] prdataX_o;',
'output logic [`SLAVE_CNT-1:0] true_psel_o;',
'output logic false_psel_o;',
'//',
'//variables',
'logic bytes_in_transfer;',
'logic nonexist_transfer;',
'logic [`SLAVE_CNT-1:0] out_pready;',
'logic [`SLAVE_CNT-1:0] out_pslverr;',
'logic [`SLAVE_CNT-1:0][31:0] out_prdata;',
'//',
'assign bytes_in_transfer = 2**(size_of_transfer_i);',
'assign nonexist_transfer = (used_burst_i[1:0] == 2\'b11) | (bytes_in_transfer != 8\'d4); ',
'//',
'//psel for APB slave ',
'//',
'generate',
'if(`SLAVE_CNT &gt;= 1) ',
'  assign true_psel_o[0] = nonexist_transfer ? 1\'b0 : ((start_addr_i[31:0] &gt;= A_START_SLAVE0) &amp; (start_addr_i[31:0] &lt;= A_END_SLAVE0));',
'if(`SLAVE_CNT &gt;= 2)',
'  assign true_psel_o[1] = nonexist_transfer ? 1\'b0 : ((start_addr_i[31:0] &gt;= A_START_SLAVE1) &amp; (start_addr_i[31:0] &lt;= A_END_SLAVE1));',
'if(`SLAVE_CNT &gt;= 3)',
'  assign true_psel_o[2] = nonexist_transfer ? 1\'b0 : ((start_addr_i[31:0] &gt;= A_START_SLAVE2) &amp; (start_addr_i[31:0] &lt;= A_END_SLAVE2));',
'if(`SLAVE_CNT &gt;= 4)',
'  assign true_psel_o[3] = nonexist_transfer ? 1\'b0 : ((start_addr_i[31:0] &gt;= A_START_SLAVE3) &amp; (start_addr_i[31:0] &lt;= A_END_SLAVE3));',
'endgenerate',
'//',
'//this signal ensures ongoing transaction in case of non-existent address',
'//  ',
'generate',
'if(`SLAVE_CNT == 1)',
'  assign false_psel_o  = (start_addr_i[31:0] &gt; A_END_SLAVE0);',
'if(`SLAVE_CNT == 2)',
'  assign false_psel_o  = (start_addr_i[31:0] &gt; A_END_SLAVE1);',
'if(`SLAVE_CNT == 3)',
'  assign false_psel_o  = (start_addr_i[31:0] &gt; A_END_SLAVE2);',
'if(`SLAVE_CNT == 4)',
'  assign false_psel_o  = (start_addr_i[31:0] &gt; A_END_SLAVE3);',
'endgenerate',
' //',
' //',
' //',
'generate',
'	if(`SLAVE_CNT == 1)',
'	  assign dec_error_o = (start_addr_i[31:0] &gt; A_END_SLAVE0);',
'	else if(`SLAVE_CNT == 2)',
'	  assign dec_error_o = (start_addr_i[31:0] &gt; A_END_SLAVE1);',
'	else if(`SLAVE_CNT == 3)',
'	  assign dec_error_o = (start_addr_i[31:0] &gt; A_END_SLAVE2);',
'	else if(`SLAVE_CNT == 4)',
'	  assign dec_error_o = (start_addr_i[31:0] &gt; A_END_SLAVE3);',
'endgenerate',
'  //pslverrX, preadyX',
'  assign preadyX_o  = |out_pready[`SLAVE_CNT-1:0] | invalid_psel_i | nonexist_transfer; ',
'  assign pslverrX_o = |out_pslverr[`SLAVE_CNT-1:0]| invalid_psel_i | nonexist_transfer; ',
'  generate',
'    genvar i;',
'	for (i = 0; i &lt;= `SLAVE_CNT-1; i = i + 1) begin: decPreadyAndPslverr',
'	  assign out_pready[i]  = psel[i] &amp; pready[i];',
'	  assign out_pslverr[i] = psel[i] &amp; pslverr[i];',
'	end',
'  endgenerate',
'  //prdataX',
'  assign prdataX_o = out_prdata[`SLAVE_CNT-1];',
'  assign out_prdata[0] = psel[0] ? prdata[0] : 32\'d0;',
'  //',
'  generate',
'    genvar j;',
'	for(j = 1; j &lt;= `SLAVE_CNT-1; j = j + 1) begin: decPrdata',
'	  assign out_prdata[j] = psel[j] ? prdata[j] : out_prdata[j-1];',
'	end',
'  endgenerate',
'  //',
'  //',
'  //',
'  endmodule',
''
];
countinueBuildStmtTable(g_sourceLines);
